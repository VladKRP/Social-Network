@model SocialMedia.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Смена пароля";
}

<div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 marginTop">

        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-xs-offset-1 col-xs-12 volumeStyle">
                <h3 class="col-sm-offset-4">@ViewBag.Title</h3>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.OldPassword, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-7">
                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control volumeStyle" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-7">
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control volumeStyle" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, "Подтверждение пароля", new { @class = "col-sm-4 control-label" })
                    <div class="col-sm-7">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control volumeStyle" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-7">
                        <input type="submit" value="Сохранить" class="btn btn-default volumeStyle" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
