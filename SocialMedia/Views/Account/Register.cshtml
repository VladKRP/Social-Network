@model SocialMedia.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
}

<head>
    <link rel="stylesheet" href="~/Content/CSS/account.css" />
</head>

<div class="row registrationBackground">
        <div class="col-xs-12 col-sm-10">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4 class="col-sm-offset-3">Создайте новую учетную запись</h4>
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-3 control-label" })
                    <div class="col-xs-12 col-sm-8">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-sm-3 control-label" })
                    <div class="col-xs-12 col-sm-8">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Age, new { @class = "col-sm-3 control-label" })
                    <div class="col-xs-12 col-sm-8">
                        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Gender, new { @class = "col-sm-3 control-label" })
                    <div class="col-xs-offset-1 col-xs-12 col-sm-8">
                            <label class="radio-inline">
                                женский @Html.RadioButtonFor(model => model.Gender, "женский")
                            </label>

                            <label class="radio-inline">
                                мужской @Html.RadioButtonFor(model => model.Gender, "мужской")
                            </label>
                     </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Country, new { @class = "col-sm-3 control-label" })
                    <div class="col-xs-12 col-sm-8">
                        @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 control-label" })
                    <div class="col-xs-12 col-sm-8">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-sm-3 control-label" })
                    <div class="col-xs-12 col-sm-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-sm-3 control-label" })
                    <div class="col-xs-12 col-sm-8">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-3 col-xs-12 col-sm-8">
                        <input type="submit" class="btn btn-default" value="Регистрация" />
                    </div>
                </div>
            }
    </div>
</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
